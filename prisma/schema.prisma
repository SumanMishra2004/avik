// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ResearchArea {
  id          String   @id @default(cuid())
  title       String
  description String
  icon        String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Funding {
  id        String   @id @default(cuid())
  title     String
  agency    String
  via       String
  year      String
  color     String   @default("text-purple-400")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Award {
  id          String   @id @default(cuid())
  title       String
  description String
  year        String
  emoji       String   @default("üèÜ")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Membership {
  id        String   @id @default(cuid())
  org       String
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Patent {
  id                String   @id @default(cuid())
  title             String
  applicationNumber String
  status            String
  year              String
  inventors         String
  description       String   @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Journal {
  id          String   @id @default(cuid())
  title       String
  journal     String
  year        String
  authors     String
  doi         String?
  impact      String?
  description String   @db.Text
  pdfUrl      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Transaction {
  id          String   @id @default(cuid())
  title       String
  conference  String
  year        String
  authors     String
  doi         String?
  impact      String?
  description String   @db.Text
  pdfUrl      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Conference {
  id         String   @id @default(cuid())
  title      String
  conference String
  location   String
  year       String
  authors    String
  type       String
  pdfUrl     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Book {
  id          String   @id @default(cuid())
  title       String
  type        String
  publisher   String
  year        String
  authors     String
  isbn        String?
  description String   @db.Text
  pdfUrl      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id             String   @id @default(cuid())
  title          String
  subtitle       String
  role           String
  duration       String
  status         String
  funding        String
  category       String
  problem        String   @db.Text
  approach       String   @db.Text
  impact         String   @db.Text
  technologies   String[]
  collaborators  String[]
  publications   String[]
  imageUrl       String?
  projectUrl     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ResearchWork {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  content     String   @db.Text
  category    String
  tags        String[]
  fileUrl     String?
  imageUrl    String?
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
